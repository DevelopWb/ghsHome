<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:padding="5dp">


    <ImageView
        android:id="@+id/community_image"
        android:layout_width="135dp"
        android:layout_height="75dp"
        android:adjustViewBounds="true"
        android:background="@color/app_gray_light"
        android:maxHeight="75dp"
        android:maxWidth="135dp"
        android:scaleType="fitXY"
        android:src="@drawable/default_image"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/community_title"
        android:layout_width="180dp"
        android:layout_height="28dp"
        android:ellipsize="end"
        android:maxEms="1"
        android:paddingLeft="18dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/app_black"
        android:textSize="16dp"
        app:layout_constraintLeft_toRightOf="@+id/community_image"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/community_time"
        android:layout_width="170dp"
        android:layout_height="20dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxEms="1"
        android:paddingLeft="18dp"
        android:singleLine="true"
        android:text="201111111111"
        android:textColor="#979797"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/community_image"
        app:layout_constraintTop_toBottomOf="@+id/community_title" />

    <TextView
        android:id="@+id/community_address"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxEms="1"
        android:paddingLeft="18dp"
        android:singleLine="true"
        android:text=""
        android:textColor="#979797"
        android:textSize="13dp"
        app:layout_constraintLeft_toRightOf="@+id/community_image"
        app:layout_constraintTop_toBottomOf="@+id/community_time" />


    <TextView
        android:id="@+id/community_state"
        android:layout_width="28dp"
        android:layout_height="20dp"
        android:layout_marginLeft="5dp"
        android:text=""
        android:textColor="#979797"
        android:textSize="13dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/community_address"
        app:layout_constraintLeft_toRightOf="@+id/community_address"
        app:layout_constraintTop_toBottomOf="@+id/community_time" />
</android.support.constraint.ConstraintLayout>
