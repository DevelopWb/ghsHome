<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/house_keeper_creat_time_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="5dp"
        android:textSize="12dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/house_keeper_icon_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/house_keeper_item_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_keeper_creat_time_tv" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/stroke_white_bg"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        app:layout_constraintLeft_toRightOf="@+id/house_keeper_icon_iv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/house_keeper_creat_time_tv">

        <TextView
            android:id="@+id/house_keeper_type_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:textColor="#333333"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/house_keeper_title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:text="房屋账单"
            android:textColor="#333333"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/house_keeper_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="房屋账单"
            android:textColor="#979797"
            android:textSize="14dp" />


        <LinearLayout
            android:id="@+id/house_keeper_see_more_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bg_white_only_top_gray_shape_1px"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="查看详情"
                android:textColor="#333333"
                android:textSize="14dp" />

            <ImageView
                android:layout_width="5dp"
                android:layout_height="12dp"
                android:src="@mipmap/arrow_right" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>