<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_gray_light"
    android:fitsSystemWindows="true"
    tools:context=".models.mine.useguide.UseGuideDetailActivity">

    <include
        layout="@layout/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"></include>

    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical"
          >
          <com.ghs.ghshome.custom.photoview.PhotoView
              android:id="@+id/photoview"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:scaleType="fitStart" />

          <com.ghs.ghshome.custom.photoview.PhotoView
              android:id="@+id/photoview2"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              />

          <com.ghs.ghshome.custom.photoview.PhotoView
              android:id="@+id/photoview3"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"

              />

      </LinearLayout>

  </ScrollView>

</LinearLayout>