<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/seed_record_item1_cl"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/seed_record_item1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/app_green"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/seed_record_item1_tag_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginRight="20dp"
        android:src="@mipmap/arrow_down_green"
        app:layout_constraintBottom_toBottomOf="@+id/seed_record_item1_title_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/seed_record_item1_title_tv" />
</android.support.constraint.ConstraintLayout>