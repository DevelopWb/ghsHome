<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
   >

    <ImageView
        android:id="@+id/time_tag_iv"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/time_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_status_value_tv"
        android:layout_width="wrap_content"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:textColor="#979797"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/order_deal_time_tv"
        app:layout_constraintLeft_toRightOf="@+id/time_tag_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_deal_time_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="#979797"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/order_status_value_tv"
        app:layout_constraintTop_toBottomOf="@+id/order_status_value_tv" />
</android.support.constraint.ConstraintLayout>