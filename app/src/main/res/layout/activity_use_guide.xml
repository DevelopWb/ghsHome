<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical">


    <include
        layout="@layout/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.ghs.ghshome.custom.MineCustomView
                android:id="@+id/use_guide_face_key"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                app:left_button_text="人脸开门"
                app:left_button_text_color="#000000"
                app:right_button_drawable="@mipmap/arrow_right"></com.ghs.ghshome.custom.MineCustomView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#e0e0e0"></View>

            <com.ghs.ghshome.custom.MineCustomView
                android:id="@+id/use_guide_phone_key"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                app:left_button_text="手机开门"
                app:left_button_text_color="#000000"
                app:right_button_drawable="@mipmap/arrow_right"></com.ghs.ghshome.custom.MineCustomView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#e0e0e0"></View>

            <com.ghs.ghshome.custom.MineCustomView
                android:id="@+id/use_guide_add_newRoom"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                app:left_button_text="添加新房屋"
                app:left_button_text_color="#000000"
                app:right_button_drawable="@mipmap/arrow_right"></com.ghs.ghshome.custom.MineCustomView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#e0e0e0"></View>

            <com.ghs.ghshome.custom.MineCustomView
                android:id="@+id/use_guide_authorization"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                app:left_button_text="授权管理"
                app:left_button_text_color="#000000"
                app:right_button_drawable="@mipmap/arrow_right"></com.ghs.ghshome.custom.MineCustomView>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="25dp"
                android:background="#e0e0e0"></View>

            <com.ghs.ghshome.custom.MineCustomView
                android:id="@+id/use_guide_bill"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="25dp"
                android:paddingTop="10dp"
                android:paddingRight="25dp"
                android:paddingBottom="10dp"
                app:left_button_text="房屋账单"
                app:left_button_text_color="#000000"
                app:right_button_drawable="@mipmap/arrow_right"></com.ghs.ghshome.custom.MineCustomView>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#e0e0e0"></View>
        </LinearLayout>

    </ScrollView>

</LinearLayout>
