<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/seed_record_item2_title_tv"
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@+id/seed_record_item2_value_tv"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/text_title_color"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <TextView
        android:id="@+id/seed_record_item2_value_tv"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:paddingRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:textColor="@color/unclick_gray_deep"
        android:textSize="14dp"
        />

</android.support.constraint.ConstraintLayout>