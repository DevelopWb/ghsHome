<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/select_village_info_cl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/stroke_green_bg">

    <TextView
        android:id="@+id/select_village_name_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:singleLine="true"
        android:text="核实社区一区"
        android:textColor="@color/app_black"
        android:textSize="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/select_village_userType_tv"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/select_village_userType_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:background="@drawable/stroke_green_bg"
        android:paddingLeft="10dp"
        android:paddingTop="3dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:text="家人"
        android:textColor="@color/app_green"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/select_village_name_tv"
        app:layout_constraintLeft_toRightOf="@+id/select_village_name_tv"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/select_village_name_tv" />

    <TextView
        android:id="@+id/select_village_unit_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="12dp"
        android:paddingTop="10dp"
        android:paddingRight="12dp"
        android:paddingBottom="10dp"
        android:text="单元"
        android:textColor="@color/gray_deeper"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/select_village_name_tv"
        app:layout_constraintTop_toBottomOf="@+id/select_village_name_tv" />

    <ImageView
        android:id="@+id/id_check_status_tag_iv"
        android:layout_width="12dp"
        android:layout_height="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/id_check_status_tv"
        app:layout_constraintRight_toLeftOf="@+id/id_check_status_tv"
        app:layout_constraintTop_toTopOf="@+id/id_check_status_tv" />

    <TextView
        android:id="@+id/id_check_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/text_color"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="@+id/select_village_unit_tv"
        app:layout_constraintRight_toRightOf="@+id/select_village_userType_tv"
        app:layout_constraintTop_toTopOf="@+id/select_village_unit_tv" />
</android.support.constraint.ConstraintLayout>