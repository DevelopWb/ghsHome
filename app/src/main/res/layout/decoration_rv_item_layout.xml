<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="@drawable/bg_white_top_bottom_deeper_gray_shape_1px"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingTop="13dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="right|center"
            android:text="申请类型："
            android:textColor="#979797"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/decoration_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center"
            android:text=""
            android:textColor="#5F5F5F"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="right|center"
            android:text="申请房屋："
            android:textColor="#979797"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/decoration_house"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center"
            android:singleLine="true"
            android:ellipsize="end"
            android:text=""
            android:textColor="#5F5F5F"
            android:textSize="16dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="right|center"
            android:text="申请时间："
            android:textColor="#979797"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/decoration_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center"
            android:text=""
            android:textColor="#5F5F5F"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="right|center"
            android:text="申请人："
            android:textColor="#979797"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/decoration_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center"
            android:text=""
            android:textColor="#5F5F5F"
            android:textSize="16dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.5"
            android:gravity="right|center"
            android:text="申请状态："
            android:textColor="#979797"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/decoration_state"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="left|center"
            android:text=""
            android:textColor="#5F5F5F"
            android:textSize="16dp" />

    </LinearLayout>


</LinearLayout>
