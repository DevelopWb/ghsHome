<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_gray_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".models.propertyHall.decoration.CreateDecorationActivity">

    <include
        layout="@layout/layout_actionbar"
        android:layout_width="match_parent"
        android:layout_height="55dp"></include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="9">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="房屋名称"
                        android:textColor="#5F5F5F"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/fitment_room_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:lines="1"
                        android:paddingLeft="45dp"
                        android:paddingRight="30dp"
                        android:text="一期一号楼一单元101"
                        android:textColor="#5F5F5F"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="申请人"
                        android:textColor="#5F5F5F"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/fitment_proposer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:lines="1"
                        android:paddingLeft="45dp"
                        android:paddingRight="30dp"
                        android:text="里小双"
                        android:textColor="#5F5F5F"
                        android:textSize="16dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="left|center"
                        android:layout_marginLeft="20dp"
                        android:gravity="center"
                        android:text="联系电话"
                        android:textColor="#5F5F5F"
                        android:textSize="16dp" />


                    <TextView
                        android:id="@+id/fitment_proposer_mobile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="right|center"
                        android:lines="1"
                        android:paddingLeft="45dp"
                        android:paddingRight="30dp"
                        android:text="18810891140"
                        android:textColor="#5F5F5F"
                        android:textSize="16dp" />


                </LinearLayout>

            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_white_top_bottom_deeper_gray_shape_1px">

                <TextView
                    android:id="@+id/add_visitor_driveable"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="是否委托代理人"
                    android:textColor="#5F5F5F"
                    android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/add_visitor_view_dp"
                    tools:ignore="MissingConstraints" />

                <Switch
                    android:id="@+id/add_visitor_drived_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/add_visitor_driveable"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/add_visitor_driveable" />


                <android.support.constraint.Group
                    android:id="@+id/add_visitor_car_num_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:constraint_referenced_ids="add_visitor_car_num_tv,line_view6"
                    tools:ignore="NotSibling" />

                <LinearLayout
                    android:id="@+id/add_visitor_car_num_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/add_visitor_driveable">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_white_only_top_gray_shape_1px"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="代理人姓名"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                        <EditText
                            android:id="@+id/fitment_agent_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入"
                            android:lines="1"
                            android:paddingLeft="45dp"
                            android:paddingRight="30dp"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E0E0E0"></View>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="联系电话"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                        <EditText
                            android:id="@+id/fitment_agent_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入"
                            android:inputType="number"
                            android:lines="1"
                            android:paddingLeft="45dp"
                            android:paddingRight="30dp"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="身份证号"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                        <EditText
                            android:id="@+id/fitment_agent_number"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入"
                            android:lines="1"
                            android:paddingLeft="45dp"
                            android:paddingRight="30dp"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                    </LinearLayout>


                </LinearLayout>


            </android.support.constraint.ConstraintLayout>


            <LinearLayout
                android:id="@+id/fitment_start_time_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_white_top_bottom_deeper_gray_shape_1px"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="装修开始时间"
                    android:textColor="#5F5F5F"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/fitment_start_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="请选择"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/fitment_start_time_image"
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/arrow_right" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/fitment_end_time_ly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="装修结束时间"
                    android:textColor="#5F5F5F"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/fitment_end_time"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right|center"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="请选择"
                    android:textSize="16dp" />

                <ImageView
                    android:id="@+id/fitment_end_time_image"
                    android:layout_width="8dp"
                    android:layout_height="15dp"
                    android:layout_gravity="right|center"
                    android:layout_marginLeft="3dp"
                    android:src="@mipmap/arrow_right" />

            </LinearLayout>


            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:background="@drawable/bg_white_top_bottom_deeper_gray_shape_1px">

                <TextView
                    android:id="@+id/add_visitor_driveable_"
                    android:layout_width="wrap_content"
                    android:layout_height="57dp"
                    android:gravity="center_vertical"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="是否自装"
                    android:textColor="#5F5F5F"
                    android:textSize="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/add_visitor_view_dp"
                    tools:ignore="MissingConstraints" />

                <Switch
                    android:id="@+id/add_visitor_drived_switch_"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/add_visitor_driveable_"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/add_visitor_driveable_" />

                <LinearLayout
                    android:id="@+id/fitment_isDecorAtion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/add_visitor_driveable_">


                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_white_only_top_gray_shape_1px"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="装修公司名称"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                        <EditText
                            android:id="@+id/fitment_company_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入"
                            android:lines="1"
                            android:paddingLeft="45dp"
                            android:paddingRight="30dp"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E0E0E0"></View>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"

                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="装修负责人"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                        <EditText
                            android:id="@+id/fitment_company_people"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入"
                            android:lines="1"
                            android:paddingLeft="45dp"
                            android:paddingRight="30dp"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="left|center"
                            android:layout_marginLeft="20dp"
                            android:gravity="center"
                            android:text="联系电话"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                        <EditText
                            android:id="@+id/fitment_company_mobile"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@null"
                            android:gravity="right|center"
                            android:hint="请输入"
                            android:inputType="phone"
                            android:lines="1"
                            android:paddingLeft="45dp"
                            android:paddingRight="30dp"
                            android:textColor="#5F5F5F"
                            android:textSize="16dp" />


                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="10dp"
                        android:background="@color/app_gray_light" />

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_white_top_bottom_deeper_gray_shape_1px"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:id="@+id/fitment_idcard_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:text="装修负责人身份证"
                            android:textSize="16dp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/id_card_front_iv"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/id_card_front_icon"
                            app:layout_constraintEnd_toStartOf="@+id/id_card_back_iv"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fitment_idcard_text" />

                        <ImageView
                            android:id="@+id/id_card_front_delete_icon"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_margin="7dp"
                            android:src="@mipmap/mine_suggest_icon_delete"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/id_card_front_iv"
                            app:layout_constraintTop_toTopOf="@+id/id_card_front_iv" />

                        <ImageView
                            android:id="@+id/id_card_back_iv"
                            android:layout_width="150dp"
                            android:layout_height="100dp"
                            android:layout_marginLeft="20dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/id_card_back_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/id_card_front_iv"
                            app:layout_constraintTop_toBottomOf="@+id/fitment_idcard_text" />

                        <ImageView
                            android:id="@+id/id_card_back_delete_icon"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_marginRight="7dp"
                            android:layout_marginTop="7dp"
                            android:src="@mipmap/mine_suggest_icon_delete"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/id_card_back_iv"
                            app:layout_constraintTop_toTopOf="@+id/id_card_back_iv" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/fitment_licence_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:text="装修公司营业执照（需加盖公章）"
                            android:textSize="16dp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/id_card_licence_iv"
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/business_license"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fitment_licence_text" />

                        <ImageView
                            android:id="@+id/licence_delete_icon"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_margin="7dp"
                            android:src="@mipmap/mine_suggest_icon_delete"

                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/id_card_licence_iv"
                            app:layout_constraintTop_toTopOf="@+id/id_card_licence_iv" />
                    </android.support.constraint.ConstraintLayout>

                    <android.support.constraint.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                        android:paddingBottom="20dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">

                        <TextView
                            android:id="@+id/fitment_qualification_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="15dp"
                            android:text="装修公司资质证书（需加盖公章）"
                            android:textSize="16dp"
                            app:layout_constraintTop_toTopOf="parent" />

                        <ImageView
                            android:id="@+id/id_card_qualification_iv"
                            android:layout_width="160dp"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            android:src="@mipmap/qualification_icon"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/fitment_qualification_text" />

                        <ImageView
                            android:id="@+id/qualification_delete_icon"
                            android:layout_width="17dp"
                            android:layout_height="17dp"
                            android:layout_margin="7dp"
                            android:src="@mipmap/mine_suggest_icon_delete"
                            android:visibility="gone"
                            app:layout_constraintRight_toRightOf="@+id/id_card_qualification_iv"
                            app:layout_constraintTop_toTopOf="@+id/id_card_qualification_iv" />
                    </android.support.constraint.ConstraintLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginLeft="15dp"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/add_visitor_car_num"></View>

            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:minHeight="20dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="15dp"
                    android:paddingTop="15dp"
                    android:text="装修图纸"
                    android:textSize="16dp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/select_photos_rv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/app_white"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_only_bottom_gray_shape_1px"
                android:orientation="vertical"
                android:paddingLeft="20dp"
                android:paddingRight="20dp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:text="装饰内容"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/fitment_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:gravity="left"
                    android:hint="请输入装修内容"
                    android:inputType="textMultiLine"
                    android:maxLength="300"
                    android:maxLines="8"
                    android:minHeight="80dp"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
