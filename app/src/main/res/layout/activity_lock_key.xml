<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".models.propertyHall.openDoorByMobile.MobileOpenActivity">

    <include
        layout="@layout/lock_open_header"
        android:layout_width="match_parent"
        android:layout_height="55dp"></include>

    <ImageView
        android:layout_width="43dp"
        android:layout_height="48dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="48dp"
        android:src="@mipmap/open_f" />

    <TextView
        android:id="@+id/blue_key_village_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="22dp"
        android:gravity="center"
        android:text="褐石公园小区"
        android:textColor="#5F5F5F" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="8dp"
        android:background="@color/line_gray" />


    <LinearLayout
        android:id="@+id/open_key_door"
        android:layout_width="107dp"
        android:layout_height="107dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:background="@drawable/blue_open_door_bg_selector"
        android:gravity="center">


        <ImageView
            android:layout_width="43dp"
            android:layout_height="48dp"
            android:src="@mipmap/open_t" />

    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:gravity="center"
        android:text="打开蓝牙，靠近门禁机点击开门"
        android:textSize="12dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp">

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/moblie_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="14dp"
                android:text="远程开门"
                android:textColor="@color/button_backgroud" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/car_info_gray" />

            <TextView
                android:id="@+id/password_key"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center"
                android:text="密码开门"
                android:textColor="@color/button_backgroud" />

            <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/car_info_gray" />

            <TextView
                android:id="@+id/key_record"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="14dp"
                android:gravity="center"
                android:text="开门记录"
                android:textColor="@color/button_backgroud" />
        </LinearLayout>

    </RelativeLayout>


</LinearLayout>