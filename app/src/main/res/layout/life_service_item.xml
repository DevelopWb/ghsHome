<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingBottom="15dp">

    <ImageView
        android:id="@+id/life_service_edit_tag_iv"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:scaleType="fitCenter"
        android:src="@mipmap/edit_service_add"
        app:layout_constraintBottom_toTopOf="@+id/life_service_icon_ll"
        app:layout_constraintLeft_toRightOf="@+id/life_service_icon_ll" />

    <LinearLayout
        android:id="@+id/life_service_icon_ll"
        android:layout_width="55dp"
        android:layout_marginTop="15dp"
        android:layout_height="55dp"
        android:background="@drawable/bg_gray_f7f7_fill"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/life_service_icon_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:scaleType="fitCenter"
            android:src="@mipmap/service_decoration" />
    </LinearLayout>


    <TextView
        android:id="@+id/life_service_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:textColor="#5F5F5F"
        android:textSize="12dp"
        app:layout_constraintLeft_toLeftOf="@+id/life_service_icon_ll"
        app:layout_constraintRight_toRightOf="@+id/life_service_icon_ll"
        app:layout_constraintTop_toBottomOf="@+id/life_service_icon_ll" />
</android.support.constraint.ConstraintLayout>